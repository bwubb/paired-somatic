        "{work_dir}/{tumor}/varscan2/raw.snps.fpfilter.out",
        "{work_dir}/{tumor}/varscan2/raw.indels.fpfilter.out"
    output:
        "{work_dir}/{tumor}/varscan2/somatic.snps.fpfilter.vcf",
        "{work_dir}/{tumor}/varscan2/somatic.indels.fpfilter.vcf"
    script:
        'fix_varscan2_out.py'
